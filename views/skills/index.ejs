<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Express Skills</title>
</head>
<body>
    <h1>Skills as of <%= time %></h1>
    <ul>
        <% skills.forEach(function(skill) { %>
            <li>
                <form class="delete-form" action="/skills/<%= skill.id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                <a href="/skills/<%= skill.id %>">
                <%= skill.skill %> - <%= skill.done ? 'done' : 'not done' %></li>
                </a>
        <% }) %>
    </ul>
    <a href="/skills/new">Add a skill!</a>
    </ul>
</body>
</html>